{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src", //if removed we'll get ./dist/src/index.js, now we get ./dist/index.js
		"inlineSourceMap": true,
		"moduleResolution": "node",
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"*.js"
	]
}